def workspace
pipeline {
    agent any
    stages {
        stage('Clean') {
            steps {
                cleanWs()
                // in groovy
                // echo "${env.WORKSPACE}"
                //in shell
                // sh 'echo $WORKSPACE'
                // in groovy script 
                // script {
                //     print env.WORKSPACE
                // }
            }
        }
        stage('clone') {
            environment {
                db.env = credentials('DB_PRESTA')
                presta.env = credentials('PRESTA_VAR')
            }
            steps {
                sh "git clone https://github.com/Projetits/Project-B-Its.git"
                echo "Clonage du repo en cour..."
            }
        }
        stage('Build') {
            steps {
                sh "cd ./Project-B-Its/prestashop/ && docker compose up"
                echo 'Installation de prestashop'
            }
        }
    }
}
   