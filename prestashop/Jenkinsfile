def workspace
node {
    workspace = env.WORKSPACE
}
pipeline {
    agent any
    parameters {
        string(name: 'JENKINS_WORKSPACE', defaultValue: workspace, description: 'Jenkins WORKSPACE')
    }
    stages {
        stage('access env variable') {
            steps {
                // in groovy
                // echo "${env.WORKSPACE}"
                //in shell
                sh 'echo $WORKSPACE'
                // in groovy script 
                // script {
                //     print env.WORKSPACE
                // }
            }
        }
        stage('clone') {
            steps {
                cleanWs()
                sh "git clone https://github.com/Projetits/Project-B-Its.git"
                echo "Clonage du repo en cour..."
            }
        }
        stage('Build') {
            steps {
                sh "cd ./Project-B-Its/prestashop/ && docker compose up"
                echo 'Installation de prestashop'
            }
        }
    }
}
   